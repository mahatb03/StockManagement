@model POS_DataAccessLayer.GetItemModel
@{
    ViewBag.Title = "AddItemView";
    Layout = "~/Views/Shared/_StockManageLayoutPage.cshtml";
}

<table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>ProductID</th>
            <th>Price</th>
            <th>Color</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Size</th>
            <th>Date_Of_Entry</th>
        </tr>
    </thead>
</table>

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script>

        $(document).ready(function () {
            //$('#table').DataTable({
            Getlistitem();
        })
        var Getlistitem = function () {

            $.ajax({

                type: "GET",
                url: "@Url.Action("LoadItem", "StockReport")",
                success: function (response) {
                        Bindtable(response);
                    }

                })

        }
        var Bindtable = function (response) {
            $("#datatable").DataTable({
                "aaData": response,
                "aoColumns": [
                    { "mData": "ProductID" },
                    { "mData": "Price" },
                    { "mData": "Color" },
                    { "mData": "Brand" },
                    { "mData": "Category" },
                    { "mData": "Size" },
                    { "mData": "DateOfEntry" },

                ]
            });


        }

</script>
    }


